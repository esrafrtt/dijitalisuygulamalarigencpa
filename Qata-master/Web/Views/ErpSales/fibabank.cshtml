<div class="col-md-12">

    <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb" style="padding-top:30px;">
        <ol class="breadcrumb ">

            <li class="breadcrumb-item active" aria-current="page ">
                <h3>
                    Fibabank Taksitlendirme
                </h3>
            </li>
        </ol>
    </nav>

</div>

<div class="container-fluid">
    <cache>@DateTime.Now</cache>
    <div class="row">

        <div class="form-group col-md-2  p-3">
            <label>Temsilci </label>
            <input id="temsilci" class="form-control " placeholder="Temsilci" value="@CurrentSession.Username" disabled>
        </div>
        <div class="col-12">
            <div class="card">

            </div>
        </div>
        <div class="col-12">
            <div class="card">

                <div class="card-body">


                    <div class="table-responsive">

                        <table id="recordtable" class="table-bordered display dataTable" style="width:100%; font-size:12px;">
                            <thead style="background-color:#1f2937; height:42px;">

                                <tr style="color:#F1F1F1; ">
                                    <th>Sipariş No</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Tarih</th>
                                    <th>Bayi Adı </th>
                                    <th>Fiba Kredi</th>
                                    <th>Yenilenmiş Taksit</th>
                                    <th>Satış Temsilcisi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (CurrentSession.Roles.Contains("Yonetim") || CurrentSession.Roles.Contains("Yonetim"))
                                {
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td>

                                                @item.Siparisno
                                            </td>
                                            <td>
                                                @item.Siparisdate

                                            </td>
                                            <td>
                                                @item.DAT
                                            </td>

                                            <td>
                                                @item.DEFINITION_
                                            </td>
                                            <td>
                                                @item.Fiyat

                                            </td>
                                            <td>
                                                @item.Toplamtutar
                                            </td>
                                            <td>
                                                @item.SatisTemsilcisi
                                            </td>






                                        </tr>
                                    } }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        @if (@item.SatisTemsilcisi == @CurrentSession.Username)
                                        {
                                            <tr>

                                                <td>

                                                    @item.Siparisno
                                                </td>
                                                <td>
                                                    @item.Siparisdate

                                                </td>
                                                <td>
                                                    @item.DAT
                                                </td>
                                                <td>
                                                    @item.DEFINITION_
                                                </td>
                                                <td>
                                                    @item.Fiyat

                                                </td>
                                                <td>
                                                    @item.Toplamtutar
                                                </td>
                                                <td>
                                                    @item.SatisTemsilcisi
                                                </td>






                                            </tr>
                                        }}}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
