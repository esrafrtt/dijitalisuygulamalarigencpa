
@model accountcodelistModel

@{ ViewData["Title"] = "accountcodelist";
                }


<div class="page-breadcrumb">
    <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb" style="padding-top:30px;">
        <ol class="breadcrumb ">

            <li class="breadcrumb-item active" aria-current="page ">
                <h3>
                    Muhasebe Kodları
                </h3>
            </li>
        </ol>
    </nav>
</div>
<div class="container-fluid">
    <div class="row">

        <div class="col-md-12">

            <div class="card">

                <div class="card-body">
                    <div class=" ml-auto text-right">
                        <a href="/accountcode/accountcodeadd" class="btn  btn-success">Yeni  Ekle</a>
                    </div>

                    <div class="table-responsive">
                        <table id="recordtable" class="table table-bordered display dataTable">
                            <thead style="background-color:#1f2937; height:42px;">
                                <tr style="color:#F1F1F1; ">
                                    <th>Başlık  </th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.accountcodelist)
                                {
                    <tr>
                        <td class="text-center">
                            @item.title
                        </td>
                        <td class="text-center">
                            <a style="padding-top:0px;padding-bottom:0px;" href="/accountcode/accountcodeedit/@item.id" class="btn btn-warning">Düzenle</a>
                            <a style="padding-top:0px;padding-bottom:0px;" href="/accountcode/accountcodedelete/@item.id" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

