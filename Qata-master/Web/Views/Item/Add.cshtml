@model Entities.Concrete.Item

@{
    ViewData["Title"] = "NewConfiguration";
}

<div class="">
      <div class="col-md-12">

        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb" style="padding-top:30px;">
            <ol class="breadcrumb ">

                <li class="breadcrumb-item active" aria-current="page ">
                    <h3>
                        Ekle
                    </h3>
                </li>
            </ol>
        </nav>

    </div>
</div>
<div class="bg-white  mt-4 ">
    <div class="row bg-white rounded">
        <p> &nbsp; </p>
        <div class="col-sm-6">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">İsim</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div> 
                <div class="form-group">
                    <label asp-for="Code" class="control-label">Kod</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="LogoId" class="control-label"></label>
                    <input asp-for="LogoId" class="form-control" />
                    <span asp-validation-for="LogoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Fiyat</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div> 
                <div class="form-group">
                    <label asp-for="ItemType" class="control-label">Mazeme Türü</label>
                    <input asp-for="ItemType" class="form-control" />
                    <span asp-validation-for="ItemType" class="text-danger"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="Stock" class="control-label">Stock</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <p> &nbsp; </p>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <div>
                        <a href="/Item/Index">Back to List</a>
                    </div>
                    <p> &nbsp; </p>
                </div>
            </form>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
